{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block navbar %}{% endblock %}

{% block body %}
	{% if error %}
		<div class="alert alert-danger alert-dismissible fade show mt-3 m-auto w-75 d-flex align-items-center"
			 role="alert">
			<i class="fa-solid fa-triangle-exclamation px-3"></i>
			<div class="">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
			<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
		</div>
	{% endif %}

	<div class="flex-container m-auto">
		<div class="image-container"></div>

		<div class="content-container">
			<div class="d-flex justify-content-center">
				<img class="logo" src="{{ asset('img/Logo.png') }}" alt="logo">
			</div>

			<p class="welcome-text">Welcome back!</p>

			<a href="{{ path('connect') }}"
			   class="d-flex justify-content-center align-items-center w-100 btn btn-outline-dark mb-3">
				<div class="p-1">
					<img class="icon" src="{{ asset('img/google.svg') }}" alt="google">
				</div>
				<span class="button-text">Sign in with Google</span>
			</a>

			<div class="d-flex justify-content-between align-items-center mt-1 py-3">
				<span class="separator"></span>
				<a href="#" class="email-login">or login with email</a>
				<span class="separator"></span>
			</div>
			<form method="post">
				<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

				<div class="mt-1">
					<label class="label" for="LoggingEmailAddress">Email Address</label>
					<input type="email" value="{{ last_username }}" name="_username" id="LoggingEmailAddress"
						   class="form-control p-3" autocomplete="email" required>
				</div>

				<div class="my-3">
					<div class="d-flex justify-content-between">
						<label class="label" for="loggingPassword">Password</label>
						<a href="{{ path('app_forgot_password_request') }}" class="forget-password">Forget Password?</a>
					</div>
					<input type="password" name="_password" id="loggingPassword" class="form-control p-3"
						   autocomplete="current-password" required>
				</div>

				{#        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality. #}
				{#        See https://symfony.com/doc/current/security/remember_me.html #}
				{#        <div class="checkbox mb-3"> #}
				{#            <label> #}
				{#                <input type="checkbox" name="_remember_me"> Remember me #}
				{#            </label> #}
				{#        </div> #}

				<div class="mt-3 mb-3">
					<button class="btn btn-outline-primary w-100 p-3" type="submit">Sign In</button>
				</div>
			</form>

			<div class="d-flex justify-content-between align-items-center mt-1 py-3">
				<span class="separator"></span>
				<a href="{{ path('app_register') }}" class="sign-up">or sign up</a>
				<span class="separator"></span>
			</div>
		</div>
	</div>
{% endblock %}

{% block footer %}{% endblock %}
