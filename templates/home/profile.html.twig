{% extends 'base.html.twig' %}

{% block title %} Profile {% endblock %}

{% block body %}
	<div class="container mt-5">
		<div class="col-6 p-5 m-auto rounded shadow">
			<div class="d-flex justify-content-center align-items-center gap-3 mb-3 mx-auto">
				<i class="fa-solid fa-address-card fa-lg"></i>
				<span class="fs-4 fw-bold">Profile</span>
			</div>
			<div class="mt-6">
				<div class="row">
					<div class="col">
						<label for="lastName" class="d-block text-sm">Last name</label>
						<input type="text" id="lastName" value="{{ app.user.lastName }}"
							   class="d-block w-100 px-4 py-2 mt-2 bg-white border rounded" readonly/>
					</div>
					<div class="col">
						<label for="firstName" class="d-block text-sm">First name</label>
						<input type="text" id="firstName" value="{{ app.user.firstName }}"
							   class="d-block w-100 px-4 py-2 mt-2 bg-white border rounded" readonly/>
					</div>
				</div>
				<div class="mt-4">
					<label for="email" class="d-block text-sm">Email</label>
					<input type="email" id="email" value="{{ app.user.email }}"
						   class="d-block w-100 px-4 py-2 mt-2 bg-white border rounded" readonly/>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
